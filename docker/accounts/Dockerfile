FROM java:openjdk-8-alpine

WORKDIR /usr/src/app
COPY *.jar ./app.jar

ARG BUILD_DATE
ARG BUILD_VERSION
ARG COMMIT

LABEL org.label-schema.vendor="Weaveworks" \
  org.label-schema.build-date="${BUILD_DATE}" \
  org.label-schema.version="${BUILD_VERSION}" \
  org.label-schema.name="Socks Shop: Accounts" \
  org.label-schema.description="REST API for Accounts service" \
  org.label-schema.url="https://github.com/microservices-demo/accounts" \
  org.label-schema.vcs-url="github.com:microservices-demo/accounts.git" \
  org.label-schema.vcs-ref="${COMMIT}" \
  org.label-schema.schema-version="1.0"

ENTRYPOINT ["java","-Djava.security.egd=file:/dev/urandom","-jar","./app.jar", "--port=80"]
